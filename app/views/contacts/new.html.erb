<div class="container">
	<h1 class="text-center">Contactez nous</h1>
	<div class="d-flex justify-content-center">
		<div class="col-12 col-md-6">
		  <%= simple_form_for @contact, :html => {class: 'form-horizontal' } do |f| %>
		    <%= f.input :name, required: true, placeholder:"Votre nom", label: false %>
		    <%= f.input :email, required: true, placeholder:"Votre email", label: false %>
		    <%= f.input :message, as: :text, required: true, placeholder:"Votre message", label: false %>
		    <%= invisible_recaptcha_tags text: 'Envoyer', class: "btn btn-primary" %>
		  <% end %>
		</div>
	</div>
</div>
