<% if session[:code] %>
<div class="container">
	<div class="row mt-5">
		<div class="col-4">
			<div
			  id="map"
			  style="width: 100%;
			  height: 600px;"
			  data-markers="<%= @markers.to_json %>"
			  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
			></div>
		</div>
		<div class="col-8" id="hospital-listing">
			<div class="d-flex justify-content-between mb-2">
				<div>
					<div class="has-search">
				    <span class="fa fa-search form-control-feedback"></span>
						<input type="text" id="searchHospitalInput" placeholder="Chercher un établissement">
				  </div>
				</div>
				<div>
					<%= link_to 'Ajouter un établissement', new_hospital_path, class: "btn btn-primary" %>
				</div>
			</div>
			<div>
				<% @known_hospitals.each do |hospital| %>
					<%= render partial: 'shared/hospital-card', locals: {hospital: hospital } %>
				<% end %>
				<p>Nombre de lits inconnus :</p>
				<% @pending_hospitals.each do |hospital| %>
					<%= render partial: 'shared/hospital-card', locals: {hospital: hospital } %>
				<% end %>
			</div>
		</div>
	</div>
</div>

<% else %>
Vous n'avez pas les permissions pour accéder à cette page.
<%= link_to "Retour à l'acceuil", root_path %>
<% end %>
